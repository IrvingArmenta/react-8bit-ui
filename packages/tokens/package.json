{
  "name": "@irubingu/react-8bit-tokens",
  "version": "1.2.7-alpha.0",
  "description": "generating framework agnostic design tokens with theo",
  "author": "Irving Armenta",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ts-node --project tsconfig-build.json src/index.ts",
    "prebuild": "rimraf ./build",
    "postbuild": "prettier **/* --write --ignore-unknown --loglevel=error && yarn roll",
    "dev": "watch-run -p 'src/**/*.ts,src/**/*.tsx' yarn build",
    "roll": "rollup -c",
    "prepublish": "build"
  },
  "devDependencies": {
    "@types/node": "^17.0.5",
    "@types/theo": "^8.1.4",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "json-parse-cli": "^0.4.0",
    "json-to-js": "^1.0.2",
    "parcel": "^2.0.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "theo": "^8.1.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "watch-run": "^1.2.5"
  }
}
